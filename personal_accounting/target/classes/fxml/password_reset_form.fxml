<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<AnchorPane prefHeight="350.0" prefWidth="400.0"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ua.kpi.personal.controller.PasswordResetController">

    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>

    <children>
        <VBox spacing="15"
              AnchorPane.leftAnchor="30.0"
              AnchorPane.rightAnchor="30.0"
              AnchorPane.topAnchor="30.0"
              AnchorPane.bottomAnchor="30.0"
              alignment="TOP_CENTER">

            <Label text="Встановлення нового пароля" styleClass="title-label"/>

            <Label text="Ключ відновлення"/>
            <TextField fx:id="tokenField" promptText="Вставте згенерований ключ"/>

            <Label text="Новий пароль"/>
            <PasswordField fx:id="newPasswordField" promptText="Новий пароль"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Повторіть новий пароль"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Button text="Змінити Пароль" onAction="#onChangePassword" maxWidth="Infinity" styleClass="button"/>

            <Label fx:id="statusLabel" wrapText="true" alignment="CENTER"/>

        </VBox>
    </children>
</AnchorPane>