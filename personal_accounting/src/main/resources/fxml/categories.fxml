<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="ua.kpi.personal.controller.CategoriesController" 
      spacing="15">

    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Управління Категоріями" styleClass="header-label"/>
    
    <VBox spacing="5">
        <Label text="Список категорій (Системні / Користувацькі)" styleClass="subheader-label"/>
        <ListView fx:id="listView" prefHeight="350"/>
    </VBox>


    <TitledPane text="Створення / Редагування категорії" collapsible="false">
        <content>
            <GridPane hgap="15" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="30"/>
                </columnConstraints>

                <Label text="Назва:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Тип:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <ChoiceBox fx:id="typeChoice" prefWidth="150" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="Батьківська:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <ChoiceBox fx:id="parentChoice" prefWidth="150" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
            </GridPane>
        </content>
    </TitledPane>


    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="addButton" text="Додати нову" onAction="#onAdd" styleClass="primary-button"/>
        <Button text="Редагувати вибрану" onAction="#onEdit" fx:id="editButton"/> 
        <Button text="Видалити вибрану" onAction="#onDelete" fx:id="deleteButton"/>
        <Button fx:id="cancelEditBtn" text="Скасувати" onAction="#onCancelEdit"/>
    </HBox>

    <Label fx:id="messageLabel" styleClass="message-label"/>

    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="backBtn" text="← Назад до Головної" onAction="#onBack" styleClass="secondary-button"/>
    </HBox>
</VBox>
