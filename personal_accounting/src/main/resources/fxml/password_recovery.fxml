<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.kpi.personal.controller.PasswordRecoveryController">
    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>

    <children>
        <VBox spacing="15"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20"
              AnchorPane.topAnchor="20"
              AnchorPane.bottomAnchor="20"
              alignment="TOP_CENTER">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Відновлення пароля" styleClass="title-label"/>

            <Label fx:id="messageLabel" text="Введіть ваш email для отримання ключа."/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Email:"/>
                <TextField fx:id="emailField" HBox.hgrow="ALWAYS" promptText="name@example.com"/>
            </HBox>

            <Button text="Згенерувати Ключ (Крок 1)" onAction="#onSendResetLink" styleClass="button"/>

            <Separator/>

            <Label text="Ключ для скидання (Скопіюйте його!):"/>
            <TextField fx:id="tokenDisplayField" editable="false" promptText="Токен з'явиться тут після генерації"/>

            <Button text="Ввести Новий Пароль (Крок 2)" onAction="#onOpenResetWindow" styleClass="button"/>

            <Hyperlink text="Повернутися до входу" onAction="#onCancel"/>

        </VBox>
    </children>
</AnchorPane>